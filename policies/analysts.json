{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "S3ReadOnlyAppBucket",
      "Effect": "Allow",
      "Action": [
        "s3:ListBucket"
      ],
      "Resource": "arn:aws:s3:::startupco-app-bucket"
    },
    {
      "Sid": "S3ReadOnlyAppObjects",
      "Effect": "Allow",
      "Action": [
        "s3:GetObject"
      ],
      "Resource": "arn:aws:s3:::startupco-app-bucket/*"
    },
    {
      "Sid": "RDSMetadataRead",
      "Effect": "Allow",
      "Action": [
        "rds:DescribeDBInstances",
        "rds:DescribeDBClusters",
        "rds:ListTagsForResource",
        "rds:DescribeDBSnapshots"
      ],
      "Resource": "*"
    }
  ]
}